<h1>Searching for - <%= @search_term %></h1>

<table border="1">
  <tr>
  	<th>Image</th>
  	<th>Title</th>
  	<th>Social Rank</th>
  </tr>
  <% if @recipes.nil? %>
    <p> Sorry, There aren't recipes in this term!</p>
  <% else %>
    <% @recipes.each do |recipe| %>
      <tr class=<%= cycle('even', 'odd') %>>
        <td><%= link_to image_tag(recipe["image_url"], width: '100', hiegh: '100'), recipe['source_url'] %></td>
        <td><%= link_to sanitize(recipe["title"]), recipe['source_url'] %></td>
        <td><%= recipe["social_rank"] %></td>
      </tr>
    <% end %>
  <% end %>
</table>